{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
   
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "./@types",
        "./node_modules/@types"
      ],
      "rootDir": "./src",
      "removeComments": true,
      "allowJs": true
    } ,
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "./src/tests"]
  }